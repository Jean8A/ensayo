 @model ENSAYO.Models.Habitacione

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<div class="container my-4">
    <h1 class="text-center mb-4 text-danger">Eliminar Habitación</h1>

    <!-- Mensaje de confirmación -->
    <div class="alert alert-warning text-center" role="alert">
        <h4>¿Estás seguro que deseas eliminar esta habitación?</h4>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <!-- Detalles de la habitación -->
    <div class="card shadow-sm p-4 mb-4" style="border-radius: 8px;">
        <h4 class="card-title mb-3">Detalles de la Habitación</h4>
        <dl class="row">
            <dt class="col-sm-4 font-weight-bold">Nombre de la Habitación</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreHabitacion)</dd>

            <dt class="col-sm-4 font-weight-bold">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge" style="background-color: @(Model.Estado ? "#28a745" : "#dc3545"); color: white;">
                    @(Model.Estado ? "Disponible" : "Ocupado")
                </span>
            </dd>

            <dt class="col-sm-4 font-weight-bold">Descripción</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-4 font-weight-bold">Costo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Costo)</dd>

            <dt class="col-sm-4 font-weight-bold">Tipo de Habitación</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTipoHabitacionNavigation.NombreTipoHabitacion)</dd>
        </dl>
    </div>

    <!-- Botones de acción -->
    <div class="text-center">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="IdHabitacion" />
            <button type="submit" class="btn btn-danger mx-2">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary mx-2">
            <i class="fas fa-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #bd2130;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        color: white;
    }

    .card {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .badge {
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
    }
</style>
