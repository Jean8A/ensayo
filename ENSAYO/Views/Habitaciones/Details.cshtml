
@model ENSAYO.Models.Habitacione

@{
    ViewData["Title"] = "Detalles de la Habitación";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Detalles de la Habitación</h1>

    <div class="row">
        <!-- Sección de información -->
        <div class="col-md-8">
            <div class="card p-4" style="background-color: #f4f4f4; border-radius: 8px;">
                <h4 class="mb-3">Información de la Habitación</h4>
                <dl class="row">
                    <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.NombreHabitacion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreHabitacion)</dd>

                
                    <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Estado ? "badge-success text-light" : "badge-danger text-light")"
                              style="border: 1px solid #000; padding: 0.5rem; font-weight: bold;">
                            @(Model.Estado ? "Disponible" : "Ocupada")
                        </span>
                    </dd>

                    <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.Costo)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Costo)</dd>

                    <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.IdTipoHabitacionNavigation.NombreTipoHabitacion)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTipoHabitacionNavigation.NombreTipoHabitacion)</dd>

                    <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.IdTipoHabitacionNavigation.NumeroPersonas)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTipoHabitacionNavigation.NumeroPersonas)</dd>
                </dl>
            </div>
        </div>

 
        <div class="col-md-4">
            <h4 class="mb-3">Imágenes</h4>
            <div class="d-flex flex-column align-items-center">
                @if (Model.ImagenHabitacions != null && Model.ImagenHabitacions.Any())
                {
                    var imagenes = Model.ImagenHabitacions.ToList();
                    <div class="image-container" style="position: relative; width: 370px; height: auto;">
                        <img src="@imagenes[0].IdImagenNavigation.UrlImagen" alt="Imagen principal" class="img-fluid img-thumbnail main-image" style="width: 100%; height: 100%;" />
                        @if (imagenes.Count > 1)
                        {
                            @for (int i = 1; i < imagenes.Count; i++)
                            {
                                <img src="@imagenes[i].IdImagenNavigation.UrlImagen" alt="Imagen secundaria" class="img-fluid img-thumbnail secondary-image" style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; opacity: 0; transition: opacity 0.5s;" />
                            }
                        }
                    </div>
                }
                else
                {
                    <span>No hay imágenes disponibles</span>
                }
            </div>
        </div>


    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdHabitacion" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>


    <style>
        .btn {
            transition: background-color 0.3s, color 0.3s;
        }

            .btn:hover {
                filter: brightness(90%);
            }


    .badge {
        border-radius: 0.25rem;
        font-size: 1rem;
        text-transform: uppercase;
    }

    .badge-success {
        background-color: #28a745;
        color: #fff;
    }

    .badge-danger {
        background-color: #dc3545;
        color: #fff;
    }
    .image-container {
        position: relative;
        width: 170px;
        height: 100px;
    }

    .main-image {
        width: 100%;
        height: 100%;
    }

    .secondary-image {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 0.7s;
    }

    .image-container:hover .secondary-image {
        opacity: 1;
    }
</style>

