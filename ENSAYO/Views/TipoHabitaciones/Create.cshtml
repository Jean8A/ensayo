    ViewData["Title"] = "Crear Tipo de Habitación";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">Crear Tipo de Habitación</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Nombre del Tipo de Habitación -->
                <div class="form-group mb-3">
                    <label asp-for="NombreTipoHabitacion" class="form-label fw-bold">Nombre del Tipo de Habitación</label>
                    <input asp-for="NombreTipoHabitacion" class="form-control" />
                    <span asp-validation-for="NombreTipoHabitacion" class="text-danger"></span>
                </div>

                <!-- Número de Personas -->
                <div class="form-group mb-3">
                    <label asp-for="NumeroPersonas" class="form-label fw-bold">Número de Personas</label>
                    <input asp-for="NumeroPersonas" class="form-control" />
                    <span asp-validation-for="NumeroPersonas" class="text-danger"></span>
                </div>

                <!-- Botón Crear -->
                <div class="form-group text-center">
                    <input type="submit" value="Crear" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
