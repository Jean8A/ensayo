<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ENSAYO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ENSAYO.styles.css" asp-append-version="true" />
    <style>
        /* Estilos generales para el layout */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        /* Sidebar */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #6abf4b; /* Verde claro */
            padding-top: 20px;
            padding-left: 15px;
        }

            .sidebar a {
                color: #ffffff;
                font-size: 18px;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin: 5px 0;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #539e41; /* Verde oscuro */
                }

            .sidebar .active {
                background-color: #3e8e41; /* Verde más oscuro */
            }

        .content {
            margin-left: 260px; /* Ajusta el margen para que el contenido no se superponga con la barra lateral */
            padding: 20px;
        }

        /* Footer */
        footer {
            background-color: #ffffff;
            padding: 10px 0;
            text-align: center;
            color: #555;
            margin-bottom: 0px;
        }

            footer a {
                color: #6abf4b;
            }

                footer a:hover {
                    color: #539e41;
                }
    </style>
</head>
<body>
    <!-- Barra lateral reemplazando la barra de navegación superior -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")" class="active">Home</a>
        <a href="@Url.Action("Index", "Habitaciones")">Habitaciones</a>
        <a href="@Url.Action("Index", "TipoHabitaciones")">T.Habitacion</a>
        <a href="@Url.Action("Index", "Paquetes")">Paquetes</a>
        <a href="@Url.Action("Privacy", "Home")">Privacy</a>
    </div>

    <div class="content">
        <!-- Contenido principal de la página -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - ENSAYO - <a href="@Url.Action("Privacy", "Home")">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
